<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivWeapon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/placeholder_mantle" />

    <TextView
        android:id="@+id/tvWeaponName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/ivWeapon"
        android:text="Weapon Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvWeaponAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWeaponName"
        android:layout_marginTop="12dp"
        android:text="Weapon Attack"
        android:layout_toEndOf="@id/ivWeapon" />

</RelativeLayout>